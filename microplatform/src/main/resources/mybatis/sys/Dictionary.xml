<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.micro.cloud.sys.dao.IDictionaryDao">

    <sql id="DictionaryColumns">
    a.id,
    a.label,
    a.value,
    a.selected,
    a.parent_id,
    a.type,
    a.creator,
    a.updater,
    a.create_date,
    a.update_date,
    a.status,
    a.remark
    </sql>
    <sql id="DictionaryWhere">
    	<where>
	    	 <if test="id!=null">
	            a.id=#{id}
	         </if>
	    	 <if test="label!=null">
	            a.label=#{label}
	         </if>
	    	 <if test="value!=null">
	            a.value=#{value}
	         </if>
	    	 <if test="selected!=null">
	            a.selected=#{selected}
	         </if>
	    	 <if test="parentId!=null">
	            a.parent_id=#{parentId}
	         </if>
	    	 <if test="type!=null">
	            a.type=#{type}
	         </if>
	    	 <if test="creator!=null">
	            a.creator=#{creator}
	         </if>
	    	 <if test="updater!=null">
	            a.updater=#{updater}
	         </if>
	    	 <if test="createDate!=null">
	            a.create_date=#{createDate}
	         </if>
	    	 <if test="updateDate!=null">
	            a.update_date=#{updateDate}
	         </if>
	    	 <if test="status!=null">
	            a.status=#{status}
	         </if>
	    	 <if test="remark!=null">
	            a.remark=#{remark}
	         </if>
        </where>
    </sql>
    
    <!-- 新增-单个 -->
     <insert id="save" parameterType="com.micro.cloud.sys.entity.Dictionary" useGeneratedKeys="true" keyProperty="id">
        insert into sys_dictionary <trim prefix="(" suffix=")" suffixOverrides="," ><if test=" id != null" >id,</if><if test=" label != null" >label,</if><if test=" value != null" >value,</if><if test=" selected != null" >selected,</if><if test=" parentId != null" >parent_id,</if><if test=" type != null" >type,</if><if test=" creator != null" >creator,</if><if test=" updater != null" >updater,</if><if test=" createDate != null" >create_date,</if><if test=" updateDate != null" >update_date,</if><if test=" status != null" >status,</if><if test=" remark != null" >remark,</if></trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," ><if test=" id != null" >#{id},</if><if test=" label != null" >#{label},</if><if test=" value != null" >#{value},</if><if test=" selected != null" >#{selected},</if><if test=" parentId != null" >#{parentId},</if><if test=" type != null" >#{type},</if><if test=" creator != null" >#{creator},</if><if test=" updater != null" >#{updater},</if><if test=" createDate != null" >#{createDate},</if><if test=" updateDate != null" >#{updateDate},</if><if test=" status != null" >#{status},</if><if test=" remark != null" >#{remark},</if></trim>
    </insert>
    <!-- 删除-根据ID -->
    <delete id="deleteById">
        delete from sys_dictionary  where id=#{id}
    </delete>
    <!-- 删除-批量删除多个 -->
    <delete id="deleteByIds">
		delete from sys_dictionary where id in <foreach collection="array" item="item" open="(" close=")" separator=",">#{item}</foreach>
	</delete>
	<!-- 删除-所有 -->
    <delete id="deleteAll">
        delete from sys_dictionary
    </delete>
    <!-- 修改-根据ID修改实体对象 -->
    <update id="updateById" parameterType="com.micro.cloud.sys.entity.Dictionary">
        update sys_dictionary <set><if test="id !=null">id=#{id},</if><if test="label !=null">label=#{label},</if><if test="value !=null">value=#{value},</if><if test="selected !=null">selected=#{selected},</if><if test="parentId !=null">parent_id=#{parentId},</if><if test="type !=null">type=#{type},</if><if test="creator !=null">creator=#{creator},</if><if test="updater !=null">updater=#{updater},</if><if test="createDate !=null">create_date=#{createDate},</if><if test="updateDate !=null">update_date=#{updateDate},</if><if test="status !=null">status=#{status},</if><if test="remark !=null">remark=#{remark},</if></set> where id=#{id}
    </update>
    <!-- 查询-根据ID查询 -->
    <select id="findById" resultType="com.micro.cloud.sys.entity.Dictionary" parameterType="string">
        SELECT <include refid="DictionaryColumns"/> FROM sys_dictionary a where a.id=#{id}
    </select>
    <!-- 查询-根据ID查询 -->
    <select id="findOne" resultType="com.micro.cloud.sys.entity.Dictionary" parameterType="com.micro.cloud.sys.entity.Dictionary">
        SELECT <include refid="DictionaryColumns"/> FROM sys_dictionary a <include refid="DictionaryWhere"/>
    </select>
    <!-- 查询-所有 -->
    <select id="findAll" resultType="com.micro.cloud.sys.entity.Dictionary" parameterType="com.micro.cloud.sys.entity.Dictionary">
        SELECT <include refid="DictionaryColumns"/> FROM sys_dictionary a <include refid="DictionaryWhere"/>
    </select>
    <!-- 查询-所有VO -->
    <select id="findAllVo" resultType="com.micro.cloud.sys.vo.DictionaryVo" parameterType="com.micro.cloud.sys.entity.Dictionary">
        SELECT <include refid="DictionaryColumns"/> FROM sys_dictionary a <include refid="DictionaryWhere"/>
    </select>
    <!-- 查询-总数 -->
    <select id="count" resultType="long">
        SELECT count(a.id) FROM sys_dictionary a 
    </select>
    
</mapper>
