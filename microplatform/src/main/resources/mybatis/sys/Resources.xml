	         </if>
	    	 <if test="iconCls!=null">
	            a.iconCls=#{iconCls}
	         </if>
	    	 <if test="level!=null">
	            a.level=#{level}
	         </if>
	    	 <if test="sort!=null">
	            a.sort=#{sort}
	         </if>
	    	 <if test="type!=null">
	            a.type=#{type}
	         </if>
	    	 <if test="remark!=null">
	            a.remark=#{remark}
	         </if>
	    	 <if test="createDate!=null">
	            a.create_date=#{createDate}
	         </if>
	    	 <if test="updateDate!=null">
	            a.update_date=#{updateDate}
	         </if>
	    	 <if test="updater!=null">
	            a.updater=#{updater}
	         </if>
