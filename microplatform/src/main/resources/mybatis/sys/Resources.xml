<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.micro.cloud.sys.dao.IResourcesDao">

    <sql id="ResourcesColumns">
    a.id,
    a.name,
    a.url,
    a.parent_id,
    a.perm_code,
    a.iconCls,
    a.level,
    a.sort,
    a.type,
    a.remark,
    a.create_date,
    a.update_date,
    a.updater,
    a.creator,
