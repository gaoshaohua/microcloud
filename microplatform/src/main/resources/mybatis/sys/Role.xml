<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.micro.cloud.sys.dao.IRoleDao">

    <sql id="RoleColumns">
    a.id,
    a.role_name,
    a.role_code,
    a.status,
    a.remark,
    a.create_date,
    a.update_date,
    a.creator,
    a.updater
    </sql>
    <sql id="RoleWhere">
    	<where>
	    	 <if test="id!=null">
	            a.id=#{id}
	         </if>
	    	 <if test="roleName!=null">
	            a.role_name=#{roleName}
	         </if>
	    	 <if test="roleCode!=null">
	            a.role_code=#{roleCode}
	         </if>
	    	 <if test="status!=null">
	            a.status=#{status}
	         </if>
	    	 <if test="remark!=null">
	            a.remark=#{remark}
	         </if>
	    	 <if test="createDate!=null">
	            a.create_date=#{createDate}
	         </if>
	    	 <if test="updateDate!=null">
	            a.update_date=#{updateDate}
	         </if>
	    	 <if test="creator!=null">
	            a.creator=#{creator}
	         </if>
	    	 <if test="updater!=null">
	            a.updater=#{updater}
	         </if>
        </where>
    </sql>
    
    <!-- 新增-单个 -->
     <insert id="save" parameterType="com.micro.cloud.frame.sys.entity.Role" useGeneratedKeys="true" keyProperty="id">
        insert into sys_role <trim prefix="(" suffix=")" suffixOverrides="," ><if test=" id != null" >id,</if><if test=" roleName != null" >role_name,</if><if test=" roleCode != null" >role_code,</if><if test=" status != null" >status,</if><if test=" remark != null" >remark,</if><if test=" createDate != null" >create_date,</if><if test=" updateDate != null" >update_date,</if><if test=" creator != null" >creator,</if><if test=" updater != null" >updater,</if></trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," ><if test=" id != null" >#{id},</if><if test=" roleName != null" >#{roleName},</if><if test=" roleCode != null" >#{roleCode},</if><if test=" status != null" >#{status},</if><if test=" remark != null" >#{remark},</if><if test=" createDate != null" >#{createDate},</if><if test=" updateDate != null" >#{updateDate},</if><if test=" creator != null" >#{creator},</if><if test=" updater != null" >#{updater},</if></trim>
    </insert>
    <!-- 删除-根据ID -->
    <delete id="deleteById">
        delete from sys_role  where id=#{id}
    </delete>
    <!-- 删除-批量删除多个 -->
    <delete id="deleteByIds">
		delete from sys_role where id in <foreach collection="array" item="item" open="(" close=")" separator=",">#{item}</foreach>
	</delete>
	<!-- 删除-所有 -->
    <delete id="deleteAll">
        delete from sys_role
    </delete>
    <!-- 修改-根据ID修改实体对象 -->
    <update id="updateById" parameterType="com.micro.cloud.frame.sys.entity.Role">
        update sys_role <set><if test="id !=null">id=#{id},</if><if test="roleName !=null">role_name=#{roleName},</if><if test="roleCode !=null">role_code=#{roleCode},</if><if test="status !=null">status=#{status},</if><if test="remark !=null">remark=#{remark},</if><if test="createDate !=null">create_date=#{createDate},</if><if test="updateDate !=null">update_date=#{updateDate},</if><if test="creator !=null">creator=#{creator},</if><if test="updater !=null">updater=#{updater},</if></set> where id=#{id}
    </update>
    <!-- 查询-根据ID查询 -->
    <select id="findById" resultType="com.micro.cloud.frame.sys.entity.Role" parameterType="string">
        SELECT <include refid="RoleColumns"/> FROM sys_role a where a.id=#{id}
    </select>
    <!-- 查询-根据ID查询 -->
    <select id="findOne" resultType="com.micro.cloud.frame.sys.entity.Role" parameterType="com.micro.cloud.frame.sys.entity.Role">
        SELECT <include refid="RoleColumns"/> FROM sys_role a <include refid="RoleWhere"/>
    </select>
    <!-- 查询-所有 -->
    <select id="findAll" resultType="com.micro.cloud.frame.sys.entity.Role" parameterType="com.micro.cloud.frame.sys.entity.Role">
        SELECT <include refid="RoleColumns"/> FROM sys_role a <include refid="RoleWhere"/>
    </select>
    <!-- 查询-所有VO -->
    <select id="findAllVo" resultType="com.micro.cloud.frame.sys.vo.RoleVo" parameterType="com.micro.cloud.frame.sys.entity.Role">
        SELECT <include refid="RoleColumns"/> FROM sys_role a <include refid="RoleWhere"/>
    </select>
    <!-- 查询-总数 -->
    <select id="count" resultType="long">
        SELECT count(a.id) FROM sys_role a 
    </select>
    
    
    <!-- 查询-根据用户ID -->
    <select id="findByUserId" resultType="com.micro.cloud.frame.sys.entity.Role" parameterType="Long">
        SELECT  <include refid="RoleColumns"/>  FROM sys_role a LEFT JOIN sys_user_role ur ON  a.id=ur.role_id WHERE ur.user_id=#{userId} 
    </select>
</mapper>
