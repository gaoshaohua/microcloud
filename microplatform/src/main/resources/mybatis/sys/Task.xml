<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.micro.cloud.sys.dao.ITaskDao">

    <sql id="TaskColumns">
    a.id,
    a.job_name,
    a.job_group,
    a.cron,
    a.bean_class,
    a.is_concurrent,
    a.method_name,
    a.creator,
    a.create_date,
    a.updater,
    a.update_date,
    a.remark,
    a.status
    </sql>
    <sql id="TaskWhere">
    	<where>
	    	 <if test="id!=null">
	            a.id=#{id}
	         </if>
	    	 <if test="jobName!=null">
	            a.job_name=#{jobName}
	         </if>
	    	 <if test="jobGroup!=null">
	            a.job_group=#{jobGroup}
	         </if>
	    	 <if test="cron!=null">
	            a.cron=#{cron}
	         </if>
	    	 <if test="beanClass!=null">
	            a.bean_class=#{beanClass}
	         </if>
	    	 <if test="isConcurrent!=null">
	            a.is_concurrent=#{isConcurrent}
	         </if>
	    	 <if test="methodName!=null">
	            a.method_name=#{methodName}
	         </if>
	    	 <if test="creator!=null">
	            a.creator=#{creator}
	         </if>
	    	 <if test="createDate!=null">
	            a.create_date=#{createDate}
	         </if>
	    	 <if test="updater!=null">
	            a.updater=#{updater}
	         </if>
	    	 <if test="updateDate!=null">
	            a.update_date=#{updateDate}
	         </if>
	    	 <if test="remark!=null">
	            a.remark=#{remark}
	         </if>
	    	 <if test="status!=null">
	            a.status=#{status}
	         </if>
        </where>
    </sql>
    
    <!-- 新增-单个 -->
     <insert id="save" parameterType="com.micro.cloud.frame.sys.entity.Task" useGeneratedKeys="true" keyProperty="id">
        insert into sys_task <trim prefix="(" suffix=")" suffixOverrides="," ><if test=" id != null" >id,</if><if test=" jobName != null" >job_name,</if><if test=" jobGroup != null" >job_group,</if><if test=" cron != null" >cron,</if><if test=" beanClass != null" >bean_class,</if><if test=" isConcurrent != null" >is_concurrent,</if><if test=" methodName != null" >method_name,</if><if test=" creator != null" >creator,</if><if test=" createDate != null" >create_date,</if><if test=" updater != null" >updater,</if><if test=" updateDate != null" >update_date,</if><if test=" remark != null" >remark,</if><if test=" status != null" >status,</if></trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," ><if test=" id != null" >#{id},</if><if test=" jobName != null" >#{jobName},</if><if test=" jobGroup != null" >#{jobGroup},</if><if test=" cron != null" >#{cron},</if><if test=" beanClass != null" >#{beanClass},</if><if test=" isConcurrent != null" >#{isConcurrent},</if><if test=" methodName != null" >#{methodName},</if><if test=" creator != null" >#{creator},</if><if test=" createDate != null" >#{createDate},</if><if test=" updater != null" >#{updater},</if><if test=" updateDate != null" >#{updateDate},</if><if test=" remark != null" >#{remark},</if><if test=" status != null" >#{status},</if></trim>
    </insert>
    <!-- 删除-根据ID -->
    <delete id="deleteById">
        delete from sys_task  where id=#{id}
    </delete>
    <!-- 删除-批量删除多个 -->
    <delete id="deleteByIds">
		delete from sys_task where id in <foreach collection="array" item="item" open="(" close=")" separator=",">#{item}</foreach>
	</delete>
	<!-- 删除-所有 -->
    <delete id="deleteAll">
        delete from sys_task
    </delete>
    <!-- 修改-根据ID修改实体对象 -->
    <update id="updateById" parameterType="com.micro.cloud.frame.sys.entity.Task">
        update sys_task <set><if test="id !=null">id=#{id},</if><if test="jobName !=null">job_name=#{jobName},</if><if test="jobGroup !=null">job_group=#{jobGroup},</if><if test="cron !=null">cron=#{cron},</if><if test="beanClass !=null">bean_class=#{beanClass},</if><if test="isConcurrent !=null">is_concurrent=#{isConcurrent},</if><if test="methodName !=null">method_name=#{methodName},</if><if test="creator !=null">creator=#{creator},</if><if test="createDate !=null">create_date=#{createDate},</if><if test="updater !=null">updater=#{updater},</if><if test="updateDate !=null">update_date=#{updateDate},</if><if test="remark !=null">remark=#{remark},</if><if test="status !=null">status=#{status},</if></set> where id=#{id}
    </update>
    <!-- 查询-根据ID查询 -->
    <select id="findById" resultType="com.micro.cloud.frame.sys.entity.Task" parameterType="string">
        SELECT <include refid="TaskColumns"/> FROM sys_task a where a.id=#{id}
    </select>
    <!-- 查询-根据ID查询 -->
    <select id="findOne" resultType="com.micro.cloud.frame.sys.entity.Task" parameterType="com.micro.cloud.frame.sys.entity.Task">
        SELECT <include refid="TaskColumns"/> FROM sys_task a <include refid="TaskWhere"/>
    </select>
    <!-- 查询-所有 -->
    <select id="findAll" resultType="com.micro.cloud.frame.sys.entity.Task" parameterType="com.micro.cloud.frame.sys.entity.Task">
        SELECT <include refid="TaskColumns"/> FROM sys_task a <include refid="TaskWhere"/>
    </select>
    <!-- 查询-所有VO -->
    <select id="findAllVo" resultType="com.micro.cloud.frame.sys.vo.TaskVo" parameterType="com.micro.cloud.frame.sys.entity.Task">
        SELECT <include refid="TaskColumns"/> FROM sys_task a <include refid="TaskWhere"/>
    </select>
    <!-- 查询-总数 -->
    <select id="count" resultType="long">
        SELECT count(a.id) FROM sys_task a 
    </select>
    
</mapper>
